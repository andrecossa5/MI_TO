singularity { 
    enabled = true   
    runOptions = ' --bind /data/ '
    cacheDir = ' ./.singularity/ '
}

process {   
    container = 'docker://acox1/mito_benchmark:1.2'  

    // Resources 
    // maxForks = min((total_CPUs / CPUs_per_job) // wait_time, queue_size)   
    cpus = 10 // Temporary
    memory = '5 G' // Temporary
    maxForks = 3 // Temporary
}

trace {
    enabled = true
    file = './trace.txt'
}
